{
  "width": 500,
  "height": 1200,
  "padding": {"top": 10, "left": 30, "bottom": 30, "right": 10},
  "data": [
    {
      "name": "table",
      "format": { "type": "csv","parse": {"prozent":"number"} },
      "url": "data/percentage_region_melt.csv"
    },
    {
      "name": "art",
      "source": "table",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["art"]
        },
         {"type": "sort", "by": "art"}
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "ordinal",
      "range": "width",
      "domain": {"data": "table", "field": "BL"}
    },
    {
      "name": "g",
      "type": "ordinal",
      "range": "height",
      "padding": 0.15,
      "domain": {"data": "art", "field": "art"}
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "#07FC79", "#398C60", "#C96D00", "#fff", "#C66B50", "#1F7346", "#fff", "#AC466C", "#fff", "#598298", "#fff", "#FF8E07", "#0081C5", "#FFBC07", "#fff", "#fff", "#160C00", "#fff", "#fff", "#14AAFB", "#fff"
      ],
      "domain": {"data": "table", "field": "art"}
    }
  ],
  "axes": [
    {"type": "x", "scale": "x"}
  ],
  "marks": [
    {
      "type": "text",
      "from": {"data": "art"},
      "properties": {
        "enter": {
          "x": {"field": {"group": "width"}, "mult": 0.5},
          "y": {"scale": "g", "field": "art", "offset": -2},
          "fontWeight": {"value": "bold"},
          "text": {"field": "art"},
          "align": {"value": "center"},
          "baseline": {"value": "bottom"},
          "fill": {"value": "#000"}
        }
      }
    },
    {
      "type": "group",
      "from": {
        "data": "table",
        "transform": [{"type": "facet", "groupby": ["art"]}]
      },
      "scales": [
        {
          "name": "y",
          "type": "linear",
          "range": "height",
          "points": true,
          "padding": 1.2,
          "domain": [0,1]
        }
      ],
      "axes": [
        {
          "type": "y",
          "scale": "y",
          "tickSize": 0
        }
      ],
      "properties": {
        "enter": {
          "x": {"value": 0.5},
          "y": {"scale": "g", "field": "key"},
          "height": {"scale": "g", "band": true},
          "width": {"field": {"group": "width"}},
          "stroke": {"value": "#ccc"}
        }
      },
      "marks": [
        {
          "type": "rect",
          "properties": {
            "enter": {
              "x": {"scale": "x", "field": "BL"},
              "width": {"scale": "x", "band": true, "offset": -1},
              "y": {"scale": "y", "field": "prozent"},
              "y2": {"scale": "y", "value": 0},
              "fill": {"scale": "color", "field": "art"}
            },
            "update": {
              "fillOpacity": {"value": 1}
            },
            "hover": {
              "fillOpacity": {"value": 0.5}
            }
          }
        }
      ]
    }
  ]
}
